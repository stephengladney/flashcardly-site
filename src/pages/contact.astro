---
import Layout from "../layouts/Layout.astro";
import { contact } from "../lib/contact";

let isMessageSent = false;

if (Astro.request.method === "POST") {
  try {
    const data = await Astro.request.formData();
    const name = data.get("name");
    const email = data.get("email");
    const message = data.get("message");

    const emailBody = "Website - " + name + " - " + email + " - " + message;

    await contact(emailBody);
    isMessageSent = true;
  } catch (error) {
    if (error instanceof Error) {
      console.error(error.message);
    }
  }
}
---

<Layout title="Flashcardly - the smart flashcard app">
  <main class="max-w-6xl mx-auto flex flex-col items-center">
    <h1
      class="font-poppins font-bold text-5xl text-center my-12 text-white !inline-block mx-auto"
    >
      Contact Us
    </h1>
    {
      isMessageSent ? (
        <h2 class="text-white font-poppins text-2xl">Message sent!</h2>
      ) : (
        <form class="flex flex-col items-stretch w-96 m-auto" method="POST">
          <label>
            Your Name
            <br />
            <input type="text" name="name" class="w-full" />
          </label>
          <label>
            Your Email
            <br />
            <input type="text" name="email" class="w-full" />
          </label>
          <label>
            Message
            <br />
            <textarea name="message" class="w-full" rows="4" />
          </label>
          <button>Submit</button>
        </form>
      )
    }
  </main>
</Layout>
<style>
  label {
    color: #fff;
    font-family: Poppins;
  }

  input,
  textarea {
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
    margin-bottom: 20px;
    color: black;
    padding: 7px;
    border-radius: 5px;
  }

  button {
    color: white;
    font-family: Poppins;
    font-weight: 700;
    border: 2px solid white;
    border-radius: 25px;
    width: max-content;
    margin: 0 auto;
    padding: 8px 32px;
  }
</style>
